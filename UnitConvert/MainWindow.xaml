<Window x:Class="UnitConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unit Converter" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter the amount to convert:" />
            <TextBox x:Name="txtAmount" />
            <TextBlock Text="From" />
            <ComboBox x:Name="changeUnit1" ItemsSource="{Binding Unidades}" />
            <TextBlock Text="To" />
            <ComboBox x:Name="changeUnit2" ItemsSource="{Binding Unidades}" />
            <Button Content="Convert" Click="btnConvert" />
            <TextBlock x:Name="lblResults" />
        </StackPanel>
    </Grid>
</Window>
